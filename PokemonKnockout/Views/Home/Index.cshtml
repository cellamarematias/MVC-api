<style>
    .pokemon-link {
        cursor: pointer;
    }

    .capitalize {
        text-transform: capitalize;
    }

</style>

<div class="text-center">
    <h1 class="display-4">Pokemons</h1>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: pokemons">
            <tr>
                <td data-bind="text: id"></td>
                <td data-bind="text: name"></td>
                <td>
                    <button type="button" class="btn btn-primary" data-bind="click: $parent.showPokemon, attr: {'data-toggle': 'modal', 'data-target': '#myModal'}">
                        See
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>



<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title capitalize" id="myModalLabel" data-bind="text: selectedPokemon "></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Weight</th>
                            <th>Height</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: pokemon">
                        <tr>
                            <td data-bind="text: name"></td>
                            <td data-bind="text: weight"></td>
                            <td data-bind="text: height"></td>
                            <td>
                                <img data-bind="attr: { src: sprites.frontDefault, alt: name }" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
